<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.login"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.login.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.login.Menu"
            android:label="@string/title_activity_menu"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.example.login.Menu" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.login.Alarms"
            android:label="@string/title_activity_alarms"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.example.login.Alarms" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.login.Groups"
            android:label="@string/title_activity_groups"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.example.login.Groups" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.login.GroupInfo"
            android:label="@string/title_activity_group_info"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.example.login.GroupInfo" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.login.TagInfo"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.example.login.TagInfo" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.login.Show_Alarms"
            android:label="@string/title_activity_historical__alarms"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.example.login.HistoricalAlarms" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>